# ========== Django 配置 ==========

# 调试模式（生产环境必须设置为 False）
DEBUG=False

# Django 密钥（生产环境必须更改为随机字符串）
# 生成方式：python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=django-insecure-change-this-in-production

# 允许访问的主机（多个用逗号分隔）
ALLOWED_HOSTS=localhost,127.0.0.1,yourdomain.com

# ========== 数据库配置 ==========

# 数据库名称
DB_NAME=digitalpet

# 数据库用户名
DB_USER=digitalpet

# 数据库密码（生产环境必须更改为强密码）
DB_PASSWORD=changeme123

# 数据库主机（Docker Compose 中使用服务名）
DB_HOST=db

# 数据库端口
DB_PORT=5432

# ========== Redis 配置 ==========

# Redis 连接 URL
REDIS_URL=redis://redis:6379/0

# ========== Nginx 配置 ==========

# Nginx 对外暴露的端口
NGINX_PORT=80

# ========== LLM 服务配置 ==========

# OpenAI API 密钥
OPENAI_API_KEY=your-openai-api-key-here

# OpenAI API 基础 URL（如使用 OpenRouter 或其他兼容服务）
OPENAI_API_BASE=https://api.openai.com/v1

# 默认模型
LLM_MODEL=gpt-3.5-turbo

# ========== CORS 配置 ==========

# CORS 允许的源（多个用逗号分隔，生产环境必须配置）
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,https://yourdomain.com

# ========== 其他配置 ==========

# 时区
TZ=Asia/Shanghai

# 语言
LANGUAGE_CODE=zh-hans
